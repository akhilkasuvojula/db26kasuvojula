extends layout

block content
 - let create = `dispatch(\"pet/create\")`
  button.btn(class="btn-success m1-1", onclick=create) Create
  h1= title
  - let pet=results;
  div(class="container-fluid mt-3")
   div(class="row m-1")
    each form in pet
     - let destination=`buy(\"/pet/update?id=${form._id}\")`
     - let detail=`buy(\"/pet/detail?id=${form._id}\")`
     - let del=`buy(\"/pet/delete?id=${form._id}\")`
     div(class="col-sm-6 bg-warning m-1 p-3") pet #{form.name} - #{form.age} - #{form.gender}
      button.btn( class="btn-primary ml-2", onclick=destination ) Update
      button.btn( class="btn-dark ml-2", onclick=detail ) Get Detail
      button.btn( class="btn-danger ml-2", onclick=del ) Delete
  
   script.
    function buy(path){
        window.location.href=path

        //alert(`You purchased Item ${a+1}`)
      }